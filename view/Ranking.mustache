    <div class="ranking-list">
        <table>
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Puntaje</th>
            </tr>
            </thead>
            <tbody>
            {{#rankingList}}
            <tr>
                <td>{{nombre}}</td>
                <td>{{puntaje_mas_alto}}</td>
            </tr>
            {{/rankingList}}
